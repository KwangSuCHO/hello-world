<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/result"
                android:hint="result"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:hint="중간기록"
                android:id="@+id/midResult"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/note"
                android:layout_weight="1"
                android:hint="전부 받아쓰는 곳"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/del"
                android:text="del"/>

        </TableRow>
        <TableRow>

            <Button
                android:layout_weight="1"
                android:id="@+id/one"
                android:text="1"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/two"
                android:text="2"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/three"
                android:text="3"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/add"
                android:text="+"/>

        </TableRow>


        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/four"
                android:text="4"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/five"
                android:text="5"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/six"
                android:text="6"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/subtract"
                android:text="-"/>

        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/seven"
                android:text="7"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/eight"
                android:text="8"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/nine"
                android:text="9"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/multiply"
                android:text="*"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:text="C"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/zero"
                android:text="0"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/zero_2"
                android:text="00"/>


            <Button
                android:layout_weight="1"
                android:id="@+id/divide"
                android:text="/"/>

        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/equal"
                android:text="="/>
        </TableRow>
    </TableLayout>


</android.support.v7.widget.LinearLayoutCompat>