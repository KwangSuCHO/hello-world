<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f69256">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/round_corner_blue"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/formula"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="15dp"
            android:background="@drawable/round_corner_white"
            android:fontFamily="@font/nanum_squareeb"
            android:textSize="30dp"
            android:textColor="#965251"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.3">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.7">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="16dp"
                    android:text="Tax-"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="15dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="15dp"
                    android:text="Tax+"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="M/EX"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/mod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="%"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:src="@drawable/root"
                    android:scaleType="centerInside"
                    android:padding="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/backspace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="30dp"
                    android:text="â–¶"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="28dp"
                    android:text="GT"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="MC"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="MR"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="M-"
                    android:textSize="28dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:textSize="28dp"
                    android:text="M+"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/divide"
                    android:scaleType="centerInside"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/switchMark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="+/_"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="7"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="8"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="9"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/multiply"
                    android:scaleType="centerInside"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="5"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/round_corner_yellow"
                    android:fontFamily="@font/nanum_squareeb"
                    android:text="C"
                    android:textColor="#966251"
                    android:textSize="28dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="4"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="5"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="6"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/subtract"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/subtract"
                    android:scaleType="centerInside"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="5"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/allClear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_yellow"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#966251"
                    android:text="AC"
                    android:textSize="28dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="1"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="2"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="3"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/add"
                    android:scaleType="centerInside"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="5"
            android:layout_weight="1"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/doubleZero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_green"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/nanum_squareeb"
                    android:textColor="#ffffff"
                    android:text="00"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/dot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/dot"
                    android:scaleType="centerInside"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_white"
                android:layout_marginRight="10dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_blue"
                    android:layout_margin="4dp"
                    android:src="@drawable/equal"
                    android:scaleType="centerInside"
                    android:padding="6dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>